<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/darker_gray"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.lenovo.head.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/view1"
        android:layout_width="359dp"
        android:layout_height="91dp"
        android:layout_marginBottom="455dp"
        android:layout_marginTop="50dp"
        android:background="@android:color/black"
        android:gravity="center_horizontal|center"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/result2"
        android:layout_width="0dp"
        android:layout_height="68dp"
        android:layout_marginBottom="7dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorAccent"
        android:ems="10"
        android:gravity="center_horizontal|center"
        android:inputType="textPersonName"
        android:text="..."
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/result1" />

    <Button
        android:id="@+id/head"
        android:layout_width="117dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="310dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="54dp"
        android:background="@color/colorAccent"
        android:text="HEAD"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view1"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/tail"
        android:layout_width="117dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="77dp"
        android:layout_marginEnd="33dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="54dp"
        android:background="@color/colorAccent"
        android:text="TAIL"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/result2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toEndOf="@+id/head"
        app:layout_constraintTop_toBottomOf="@+id/view1"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/Toss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:text="Toss"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/result1"
        android:layout_width="154dp"
        android:layout_height="68dp"
        android:layout_marginBottom="33dp"
        android:layout_marginTop="55dp"
        android:background="@color/colorAccent"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="..."
        android:textColor="@android:color/holo_orange_dark"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/result2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Toss" />

</android.support.constraint.ConstraintLayout>
